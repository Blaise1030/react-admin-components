{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["es5", "es2015", "es2016", "dom", "esnext"],
    "types": ["node"],
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "outDir": "dist/esm",
    "sourceMap": true,
    "strict": false,
    "target": "es6",
    "allowJs": true,
    "skipLibCheck": true
  },
  "include": [
    "src/packages/**/*.ts",
    "src/packages/**/*.tsx",
    "src/declaration.d.ts"
  ],
  "exclude": ["**/node_modules", "node_modules"]
}
